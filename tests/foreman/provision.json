			"name": "Get dashboard information",
			"event": [
				{
					"listen": "test",
					"script": {
						"id": "41aaccb0-323d-48d6-8eb6-eb8b2c0f8d7b",
						"exec": [
							"pm.test(\"Status code is 200\", function () {",
							"    pm.response.to.have.status(200);",
							"});",
							"pm.test(\"No hosts exist\", function () {",
							"    var jsonData = pm.response.json();",
							"    pm.expect(jsonData.total_hosts).to.eql(0);",
							"});"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{protocol}}://{{domain_name}}/api/v2/dashboard",
					"protocol": "{{protocol}}",
					"host": [
						"{{domain_name}}"
					],
					"path": [
						"api",
						"v2",
						"dashboard"
					]
				}
			},
			"response": []
		},
		{
			"name": "Get settings",
			"event": [
				{
					"listen": "test",
					"script": {
						"id": "65466059-c26b-4a5d-955a-d0d8fec6974e",
						"exec": [
							"function getId(obj, name) {",
							"  for (var i = 0; i < obj.results.length; i++){",
							"      if (obj.results[i].name == name){",
							"         return obj.results[i].id;",
							"      }",
							"  }",
							"}",
							"pm.test(\"Status code is 200\", function () {",
							"    pm.response.to.have.status(200);",
							"});",
							"var settings = new Array (\"trusted_hosts\", \"ssl_ca_file\", \"ssl_certificate\", \"ssl_priv_key\");",
							"for (var i = 0; i < settings.length; i++){",
							"    pm.globals.set(settings[i] + \"_id\", getId(pm.response.json(), settings[i]));",
							"}",
							"",
							""
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{protocol}}://{{domain_name}}/api/v2/settings?per_page=2000000",
					"protocol": "{{protocol}}",
					"host": [
						"{{domain_name}}"
					],
					"path": [
						"api",
						"v2",
						"settings"
					],
					"query": [
						{
							"key": "per_page",
							"value": "2000000"
						}
					]
				}
			},
			"response": []
		},
		{
			"name": "Update trusted_hosts",
			"event": [
				{
					"listen": "test",
					"script": {
						"id": "d765bddd-c0e0-4108-b4f3-477dfac9869f",
						"exec": [
							"pm.test(\"Status code is 200\", function () {",
							"    pm.response.to.have.status(200);",
							"});",
							"pm.test(\"trusted_hosts value is now puppet\", function () {",
							"    var jsonData = pm.response.json();",
							"    pm.expect(jsonData.value[0]).to.eql(\"puppet\");",
							"});"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "PUT",
				"header": [
					{
						"key": "Content-Type",
						"name": "Content-Type",
						"value": "application/json",
						"type": "text"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\r\n\t\"setting\": {\r\n\t\t\"value\": \"[puppet]\"\r\n\t}\r\n}"
				},
				"url": {
					"raw": "{{protocol}}://{{domain_name}}/api/v2/settings/{{trusted_hosts_id}}",
					"protocol": "{{protocol}}",
					"host": [
						"{{domain_name}}"
					],
					"path": [
						"api",
						"v2",
						"settings",
						"{{trusted_hosts_id}}"
					]
				}
			},
			"response": []
		},
		{
			"name": "Add Puppet smart proxy",
			"event": [
				{
					"listen": "test",
					"script": {
						"id": "3faac968-7966-4e5b-aa6e-b1fa37c75067",
						"exec": [
							"pm.test(\"Status code is 201\", function () {",
							"    pm.response.to.have.status(201);",
							"});",
							"pm.test(\"Puppet smart proxy added\", function () {",
							"    var jsonData = pm.response.json();",
							"    pm.expect(jsonData.name).to.eql(\"puppet\");",
							"    pm.globals.set(\"puppet_smart_proxy_id\", jsonData.id);",
							"});"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"name": "Content-Type",
						"value": "application/json",
						"type": "text"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{ \"smart_proxy\": {\"name\": \"puppet\", \"url\": \"http://puppet-smart-proxy.dummy.test:8000\" }}",
					"options": {
						"raw": {
							"language": "json"
						}
					}
				},
				"url": {
					"raw": "{{protocol}}://{{domain_name}}/api/v2/smart_proxies",
					"protocol": "{{protocol}}",
					"host": [
						"{{domain_name}}"
					],
					"path": [
						"api",
						"v2",
						"smart_proxies"
					]
				}
			},
			"response": []
		}
