  "item": [
    {
      "name": "Get dashboard information",
      "event": [
        {
          "listen": "test",
          "script": {
            "id": "41aaccb0-323d-48d6-8eb6-eb8b2c0f8d7b",
            "exec": [
              "pm.test(\"Status code is 200\", function () {",
              "    pm.response.to.have.status(200);",
              "});",
              "pm.test(\"One host still exists\", function () {",
              "    var jsonData = pm.response.json();",
              "    pm.expect(jsonData.total_hosts).to.eql(1);",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "http://{{domain_name}}/api/v2/dashboard",
          "protocol": "https",
          "host": [
            "{{domain_name}}"
          ],
          "path": [
            "api",
            "v2",
            "dashboard"
          ]
        }
      },
      "response": []
    },
    {
      "name": "Get trusted_hosts",
      "event": [
        {
          "listen": "test",
          "script": {
            "id": "d765bddd-c0e0-4108-b4f3-477dfac9869f",
            "exec": [
              "pm.test(\"Status code is 200\", function () {",
              "    pm.response.to.have.status(200);",
              "    var jsonData = pm.response.json();",
              "    pm.globals.set(\"trusted_hosts_id\", jsonData.id);",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "http://{{domain_name}}/api/v2/settings/trusted_hosts",
          "protocol": "https",
          "host": [
            "{{domain_name}}"
          ],
          "path": [
            "api",
            "v2",
            "settings",
            "trusted_hosts"
          ]
        }
      },
      "response": []
    },
    {
      "name": "Update trusted_hosts with \"puppet\"",
      "event": [
        {
          "listen": "test",
          "script": {
            "id": "d765bddd-c0e0-4108-b4f3-477dfac9869f",
            "exec": [
              "pm.test(\"Status code is 200\", function () {",
              "    pm.response.to.have.status(200);",
              "});",
              "pm.test(\"trusted_hosts value is now puppet\", function () {",
              "    var jsonData = pm.response.json();",
              "    pm.expect(jsonData.value[0]).to.eql(\"puppet\");",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "request": {
        "method": "PUT",
        "header": [
          {
            "key": "Content-Type",
            "name": "Content-Type",
            "value": "application/json",
            "type": "text"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\r\n\t\"setting\": {\r\n\t\t\"value\": \"[puppet]\"\r\n\t}\r\n}"
        },
        "url": {
          "raw": "http://{{domain_name}}/api/v2/settings/{{trusted_hosts_id}}",
          "protocol": "https",
          "host": [
            "{{domain_name}}"
          ],
          "path": [
            "api",
            "v2",
            "settings",
            "{{trusted_hosts_id}}"
          ]
        }
      },
      "response": []
    },
    {
      "name": "Get smart proxies",
      "event": [
        {
          "listen": "test",
          "script": {
            "id": "0abbda69-dd8b-4e1b-a914-33d409ebbcd5",
            "exec": [
              "pm.test(\"Status code is 200\", function () {",
              "    pm.response.to.have.status(200);",
              "});",
              "pm.test(\"No smart proxies exist\", function () {",
              "    var jsonData = pm.response.json();",
              "    pm.expect(jsonData.total).to.eql(0);",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "http://{{domain_name}}/api/v2/smart_proxies",
          "protocol": "https",
          "host": [
            "{{domain_name}}"
          ],
          "path": [
            "api",
            "v2",
            "smart_proxies"
          ]
        }
      },
      "response": []
    },
    {
      "name": "Add Puppet smart proxy",
      "event": [
        {
          "listen": "test",
          "script": {
            "id": "3faac968-7966-4e5b-aa6e-b1fa37c75067",
            "exec": [
              "pm.test(\"Status code is 201\", function () {",
              "    pm.response.to.have.status(201);",
              "});",
              "pm.test(\"Smart proxy is added\", function () {",
              "    var jsonData = pm.response.json();",
              "    pm.expect(jsonData.name).to.eql(\"puppet\");",
              "    pm.globals.set(\"puppet_smart_proxy_id\", jsonData.id);",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json",
            "type": "text"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{ \"smart_proxy\": {\"name\": \"puppet\", \"url\": \"http://puppet-smart-proxy.dummy.test:8443\" }}"
        },
        "url": {
          "raw": "http://{{domain_name}}/api/v2/smart_proxies",
          "protocol": "https",
          "host": [
            "{{domain_name}}"
          ],
          "path": [
            "api",
            "v2",
            "smart_proxies"
          ]
        }
      },
      "response": []
    },
